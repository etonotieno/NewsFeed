<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.NewsFeed" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorError">@color/colorError</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:fontFamily">@font/raleway_regular</item>
        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

    <style name="Theme.NewsFeed.DetailsTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsFeed.NoActionBar">
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- System bar attributes -->
        <item name="android:windowLightStatusBar" tools:targetApi="M">
            @bool/window_light_system_bar
        </item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorPrimary</item>
    </style>

    <style name="Theme.NewsFeed.NoActionBar.Launcher">
        <!-- Launcher window background -->
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <!-- System bar attributes -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/color_navigation_bar_launcher
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">
            @bool/window_light_system_bar
        </item>
    </style>
</resources>
